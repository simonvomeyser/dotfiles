	name = Simon vom Eyser
	email = simon.vom.eyser@gmail.com
[core]
	excludesFile = ~/.gitignore
	autocrlf = input
	editor = vim
[init]
	defaultBranch = main
[alias]
    mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2'

[push]
	default = current
	autoSetupRemote = true
